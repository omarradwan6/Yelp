
<% include  ../partials/header %>


<h1 style="text-align:center;"><strong>Edit Camp</strong></h1>

<div class="container" style="width:30%; margin: 25px auto;">

<form action="/camps/<%= camp._id %>?_method=put" method="post">
<div class="form-group">
    <!--<label for="newcamp">Camp Name</label>-->
    <input type="text"  class="form-control" name="camp[name]" value="<%= camp.name%>">
</div>


<div class="form-group">
    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price%>" min="0.01" step="0.01">
</div>   




<div class="form-group">
    <!--<label for="newImage">Camp url</label>-->
    <input type="text" class="form-control" name="camp[image]" value="<%= camp.image%>">
</div>

<div class="form-group">
    <!--<label for="newImage">Camp url</label>-->
    <input type="text" class="form-control" name="camp[description]" value="<%= camp.description%>">
</div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>
    
</form>




<div style="margin: 10px auto;"><a href="/camps">Go Back</a></div>
</div>
<% include  ../partials/footer %>